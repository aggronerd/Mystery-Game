<plot xmlns="http://www.gregorydoran.co.uk/plot" name="Wellsquire Manor Murders">
	<decisions>
	
		<decision name="character1_gender" type="string">
			<english>What is the first character's gender?</english>			
			<options>
				<option name="male" prob="0.53">
					<english>Male</english>
				</option>
				<option name="female" prob="0.47">
					<english>Female</english>
				</option>
			</options>
		</decision>
		
		<decision name="character1_first_name" type="string">
			<english>What is the first character's first name?</english>
			<options>
				<option name="john" prob="0.01">
					<english>John</english>
				</option>
				<option name="fred" prob="0.001">
					<english></english>
				</option>
			</options>
		</decision>
		
		<decision name="case" type="string">
			<english>What is the type of case?</english>
			<options>
				<option id="1" name="murder">
					<english>Murder</english>
					<decisions>
					
						<decision name="victim">
							<english>Who is the victim?</english>
							<options external_collection="characters" select="one" />
						</decision>
						
						<decision name="blood" type="integer">
							<english>How much blood was found at the crime scene?</english>
							<dependencies>
								<decision>case.murder.motive</decision>
								<decision>character1_gender</decision>
							</dependencies>
							<options>
								<option name="0">
									<english>None</english>
								</option>
								<option name="1">
									<english>Very little</english>
								</option>
								<option name="2">
									<english>Moderate</english>
								</option>
								<option name="3">
									<english>Lots</english>
								</option>
							</options>
							<probTable>
								<given value="revenge">
									<given value="male">
										<mostLikely value="3" />
									</given>
									<given value="female">
										<mostLikely value="2" />
									</given>
								</given>
								<given value="random">
									<given value="male">
										<mostLikely value="2" />
									</given>
									<given value="female">
										<mostLikely value="1" />
									</given>
								</given>
								<given value="crime_of_passion">
									<given value="male">
										<mostLikely value="3" />
									</given>
									<given value="female">
										<mostLikely value="3" />
									</given>
								</given>
							</probTable>
						</decision>
						
						<decision name="motive">
							<english>What is the motive of the murder?</english>
							<options>
								<option id="2" name="revenge">
									<english>Revenge</english>
								</option>
								<option id="3" name="random">
									<english>Random act</english>
								</option>
								<option id="4" name="crime_of_passion">
									<english>Crime of Passion</english>
								</option>
								<option id="5" name="greed">
									<english>Greed</english>
								</option>
								<option id="6" name="conspiracy">
									<english>Conspiracy</english>
								</option>
								<option id="7" name="professional">
									<english>Professional Assasination</english>
								</option>
							</options>
						</decision>
						<decision name="method">
							<options>
								<option id="8" name="bloody_stabbing">
									<english>Bloody Stabbing</english>
									<weight option_id="4" value="2" />
									<weight option_id="2" value="1" />
									<weight option_id="7" value="-1" />
								</option>
							</options>
						</decision>
						<decision name="suspects">
							<english>Who are the suspects?</english>
							<options extenal_collection="characters" select="many">
								<exclude answer="case.murder.victim" />
							</options>
						</decision>
					</decisions>
				</option>
			</options>
		</decision>
	</decisions>
</plot>
